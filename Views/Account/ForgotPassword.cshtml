@model Pte.Models.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<!-- Mirrored from www.multipurposethemes.com/admin/eduadmin-template/main/auth_login.html by HTTrack Website Copier/3.x [XR&CO'2014], Wed, 28 Jul 2021 04:12:29 GMT -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="https://www.multipurposethemes.com/admin/eduadmin-template/images/favicon.ico">

    <title>PteAdmin - Log in </title>

    <!-- Vendors Style-->
    <link rel="stylesheet" href="~/Content/assets/css/vendors_css.css">

    <!-- Style-->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">
    <link rel="stylesheet" href="~/Content/assets/css/skin_color.css">

</head>

<body class="hold-transition theme-primary bg-img" style="background-image: url(../../../Content/images/auth-bg/bg-1.jpg)">

    <div class="container h-p100">
        <div class="row align-items-center justify-content-md-center h-p100">

            <div class="col-12">
                <div class="row justify-content-center no-gutters">
                    <div class="col-lg-5 col-md-5 col-12">
                        <div class="bg-white rounded30 shadow-lg">
                            <div class="content-top-agile p-20 pb-0">
                                <h2 class="text-primary">Let's Get Started</h2>
                                <p class="mb-0">Sign in to continue to PTE Admin.</p>
                            </div>
                            <div class="p-40">
                                @using (Html.BeginForm("ValidatePassword", "Account", FormMethod.Post, new { @novalidate = "@novalidate" }))
                                {
                                    <div class="form-group">
                                        <div class="input-group mb-3 controls">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-transparent"><i class="ti-email"></i></span>
                                            </div>
                                            <input type="text" class="form-control pl-15 bg-transparent " style="width:80%" required data-validation-required-message="Email-Id is required" name="EmailId" placeholder="Your Email-Id">
                                        </div>
                                    </div>
                                   
                                    <div class="row">
                                        <!-- /.col -->
                                        <!-- /.col -->
                                        <div class="col-12 text-center">
                                            <button type="submit" class="btn btn-danger mt-10">Recover Password</button>
                                        </div>
                                        <div class="col-12">
                                            <div class="fog-pwd text-right">
                                                <a href="@Url.Action("Login","Account")" class="hover-warning"><i class="ion ion-locked"></i> Sign In?</a><br>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                }

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Vendor JS -->
    <script src="~/Content/assets/js/vendors.min.js"></script>
    <script src="~/Content/assets/js/pages/chat-popup.js"></script>
    <script src="~/Content/assets/icons/feather-icons/feather.min.js"></script>
    <script src="~/Content/assets/js/pages/validation.js"></script>
    <script src="~/Content/assets/js/pages/form-validation.js"></script>
</body>

