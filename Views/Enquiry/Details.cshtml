@model Pte.Models.InquiryDTO
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th, td {
        font-size: 13px !important;
    }

    #example5_wrapper {
        padding: 0px !important;
    }

    .table > tbody > tr > td, .table > tbody > tr > th {
        padding: 0.5rem !important;
    }

    .checkbox {
        position: relative !important;
        left: 0px !important;
        opacity: 1 !important;
    }
</style>
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">Enquiry Detailss</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                        <li class="breadcrumb-item" aria-current="page">Enquiry</li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
</div>
<section class="content">
    <div class="col-lg-12 col-12">
        <div class="box">
            <div class="box-body">
                <div class="table-responsive">
                    <table id="example5" class="table table-bordered table-striped" style="width:100%; padding:0px!important">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>F Date</th>
                                <th>EnquiryBy</th>
                                <th>Reference</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.InquiryList)
                            {
                                <tr>
                                    <td><a href="@Url.Action("_UserEnquiryDetails", "Enquiry")" class="text-info mr-10 OpenDocument" id="Enquiry Details" data-toggle="tooltip" data-original-title="Enquiry Details">
                                    @item.vName</a></td>
                                    <td>@item.vEmail</td>
                                    <td>@item.vPhoneNo</td>
                                    <td>@item.dFollowupDate</td>
                                    <td>@item.InquiryBy</td>
                                    <td>@item.Reference</td>
                                    <td>
                                        <a href="@Url.Action("_FollowUpPartials", "Enquiry")" class="text-info mr-10 OpenDocument" id="Enquiry Status" data-toggle="tooltip" data-original-title="Enquiry Status">
                                            <span class="badge badge-pill badge-info">Pending</span>
                                        </a>
                                    </td>
                                </tr>
                            }

                            <tr>
                                
                                <td>
                                    <a href="@Url.Action("_UserEnquiryDetails", "Enquiry")" class="text-info mr-10 OpenDocument" id="Enquiry Details" data-toggle="tooltip" data-original-title="Enquiry Details">
                                        Joginder Rana
                                    </a>
                                </td>
                                <td>abc@gmail.com</td>
                                <td>9000000000</td>
                                <td>01-01-2021</td>
                                <td>Deepak </td>
                                <td>Arun</td>
                                <td>
                                    <a href="@Url.Action("_FollowUpPartials", "Enquiry")" class="text-info mr-10 OpenDocument" id="Follow Up History" data-toggle="tooltip" data-original-title="Edit">
                                    <span class="badge badge-pill badge-info">Pending</span>
                                    </a>
                                </td>
                            </tr>
                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>F Date</th>
                                <th>EnquiryBy</th>
                                <th>Reference</th>
                                <th>Status</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

