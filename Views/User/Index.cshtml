@model Pte.Models.Users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">General Form Elements</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                        <li class="breadcrumb-item" aria-current="page">User</li>
                        <li class="breadcrumb-item active" aria-current="page">Add User</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
</div>
<section class="content">
    <div class="col-lg-12 col-12">
        <div class="box">

            <!-- /.box-header -->
            <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="User" novalidate>

                @using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input asp-for="@Model.vName" class="form-control" placeholder="Your Name"/>
                                    <span asp-validation-for="@Model.vName" class="text-danger"/>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Father Name</label>
                                    <input asp-for="@Model.vFather_Name" class="form-control" placeholder="Father Name" />
                                    <span asp-validation-for="@Model.vFather_Name" class="text-danger" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>User Name</label>
                                    <input asp-for="@Model.vUsername" class="form-control" placeholder="Enter Username" />
                                    <span asp-validation-for="@Model.vUsername" class="text-danger" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email address</label>
                                    <input asp-for="@Model.vEmail" class="form-control" type="email" placeholder="Enter Email" />
                                    <span asp-validation-for="@Model.vEmail" class="text-danger" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input asp-for="@Model.vPassword" class="form-control" type="password" placeholder="Enter Password" />
                                    <span asp-validation-for="@Model.vPassword" class="text-danger" />
                        
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input asp-for="@Model.vPhoneNo" class="form-control" placeholder="Enter Phone" />
                                    <span asp-validation-for="@Model.vPhoneNo" class="text-danger" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>DOB</label>
                                    <input asp-for="@Model.vDOB" class="form-control datepicker" placeholder="Enter DOB" />
                                    <span asp-validation-for="@Model.vDOB" class="text-danger" />
                                    
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Upload Image</label>

                                    <div class="custom-file">
                                        <input type="file" name="UploadImageUrl" class="custom-file-input" id="customFile">
                                        <label class="custom-file-label" for="customFile">Choose file</label>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <div class="custom-file">
                                        <input name="Gender" type="radio" value="male" id="radio_1" checked />
                                        <label for="radio_1">Male</label>
                                        <input name="Gender" type="radio" value="female" id="radio_2" />
                                        <label for="radio_2">Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>





                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="button" class="btn btn-rounded btn-warning btn-outline mr-1">
                            <i class="ti-trash"></i> Cancel
                        </button>
                        <button type="submit" class="btn btn-rounded btn-primary btn-outline">
                            <i class="ti-save-alt"></i> Save
                        </button>
                    </div>

                }
                </form>
        </div>
        <!-- /.box -->
    </div>
</section>

